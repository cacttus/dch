{
  "manifest_version": 2,
  "name": "dch",
  "version": "1.1",
  "description": "Simplifies aggregation of in-browser web content",
  "permissions": [
    "downloads", "storage"
  ],
  "options_ui": {
    "page": "settings.html"
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "dch.cacttus@github.com"
    }
  },
  "background": {
    "scripts": [
      "shared.js",
      "back.js"
    ],
    "persistent": true 
  },
  "commands": {
    "saveAll": {
      "suggested_key": {
        "default": "Ctrl+Alt+D"
      }
    },
    "saveAllAs": {
      "suggested_key": {
        "default": "Shift+Alt+D"
      }
    }
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "shared.js",
        "front.js"
      ]
    }
  ]
}